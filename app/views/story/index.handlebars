<div class="row">
  {{#each story}}
  <div class="col s12 m4">
    <div class="card ">

     
       <div class="card-image">
          {{#if user}}
            {{{editIcon user.id ../user.id id}}}
          {{/if}}
        </div>
      
     
      
      <div class="card-content center-align  box-length ">
        <h5>{{title}}</h5>
        
        <p class="story-text left-align">{{ stripTags (truncate body 100) }}</p>
        <br>
         <div class="chip">
            <img src="{{user.image}}">
            {{user.firstName}} {{user.lastName}}
          </div>
      </div>
        <div class="card-action center-align">
          <a href="/stories/show/{{id}}" class="btn grey">Read more</a>
        </div>
    </div>
  </div>
  {{else}}
  <p>No stories found</p>
  {{/each}}
</div>
